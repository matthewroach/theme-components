{
  "name": "@matthewroach/theme-components",
  "version": "0.1.6",
  "description": "Themeable Design System",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "repository": {
    "type": "git",
    "url": "ssh://git@github.com:matthewroach/theme-components.git"
  },
  "main": "dist/index.js",
  "module": "dist/index.js",
  "files": [
    "dist",
    "_index.scss",
    "README.md"
  ],
  "scripts": {
    "build": "rm -rf dist && NODE_ENV=production babel src --out-dir dist --copy-files && npm run copy:ignore",
    "component:new": "hygen component new",
    "copy:ignore": "cp src/.npmignore dist/",
    "lint": "eslint --ext js --ext jsx src",
    "lint:fix": "npm run lint -- --fix",
    "lint:styles": "stylelint '**/*.scss' --formatter verbose",
    "lint:styles:fix": "stylelint '**/*.scss' --fix",
    "storybook": "start-storybook -p 6006",
    "storybook:build": "build-storybook",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "version:patch": "npm version patch"
  },
  "author": "",
  "license": "CC-BY-NC-ND-4.0",
  "devDependencies": {
    "@babel/cli": "^7.16.0",
    "@babel/core": "^7.16.0",
    "@babel/eslint-parser": "^7.16.0",
    "@babel/preset-env": "^7.16.0",
    "@babel/preset-react": "^7.16.0",
    "@etchteam/storybook-addon-css-variables-theme": "^1.1.1",
    "@storybook/addon-actions": "^6.4.19",
    "@storybook/addon-essentials": "^6.4.19",
    "@storybook/addon-links": "^6.4.19",
    "@storybook/react": "^6.4.19",
    "@testing-library/dom": "^8.11.0",
    "@testing-library/jest-dom": "^5.15.0",
    "@testing-library/react": "^12.1.2",
    "babel-jest": "^27.3.1",
    "babel-loader": "^8.2.3",
    "css-loader": "^5.2.7",
    "eslint": "^8.2.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-jest": "^25.2.4",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.26.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "glob": "^7.2.0",
    "global-jsdom": "^8.3.0",
    "husky": "^7.0.4",
    "hygen": "^6.1.0",
    "jest": "^27.3.1",
    "jsdom": "^18.0.1",
    "mini-css-extract-plugin": "^2.4.4",
    "postcss": "^8.3.11",
    "prop-types": "^15.7.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-test-renderer": "^17.0.2",
    "sass": "^1.43.4",
    "sass-loader": "^10.1.1",
    "sass-true": "^6.0.1",
    "storybook": "^6.4.19",
    "style-loader": "^2.0.0",
    "stylelint": "^14.1.0",
    "stylelint-config-recommended": "^6.0.0",
    "stylelint-config-sass-guidelines": "^9.0.1",
    "stylelint-no-unsupported-browser-features": "^5.0.2"
  }
}
